public class Solution 
{
    public long[] solution(int x, int n) 
    {
        long i = 0;
        long j = 0;        
        
        long[] answer = new long[n];
        
        while (i < n) 
        {
            j += x;
            answer[i] = j;
            i++;
        }
        return answer;
    }
}

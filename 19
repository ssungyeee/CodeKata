using System;

public class Solution 
{
    public long solution(long n) 
    {
        double x = Math.Sqrt(n);
        long answer = 0;
        
        if (x % 1 == 0)
        {
            answer += ((long)x + 1) * ((long)x + 1);
        }
        else
        {
            answer -= 1;
        }
        return answer;
    }
}
